<launch>

  <arg name="robot_id" default="1"/>
  <arg name="avatar_id" default="2" />

  <node pkg="mocap_optitrack"
    type="mocap_node"
    name="mocap_node"
    respawn="false"
    launch-prefix=""
    required="true">
    <rosparam subst_value="true">
      rigid_bodies:
         '$(arg robot_id)':
               pose: mocap/pose
               pose2d: mocap/ground_pose
               child_frame_id: baselink
               parent_frame_id: world
         '$(arg avatar_id)':
               pose: avatar/pose
               pose2d: avatar/ground_pose
               child_frame_id: baselink
               parent_frame_id: world
      optitrack_config:
         multicast_address: 239.255.42.99
         command_port: 1510
         data_port: 1511
    </rosparam>
    <remap from="~mocap/pose" to="mocap/pose" />
  </node>

</launch>
